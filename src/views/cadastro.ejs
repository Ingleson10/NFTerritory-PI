       <div class="container">
        <div class="header">
            <img class="logo" src="/img/logo.png"/>
        </div>
            <a class="links" id="paracadastro"></a>
            <div id="Cadastrar">
                <form method="post" action="/cadastro">
                    <h1>Crie sua conta!</h1>
                    <div class="input-container">
                        <input id="nome_cad" name="nome_cad" required="required" type="text" placeholder="Ex: Luis Augusto"/>
